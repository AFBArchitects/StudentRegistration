@model StudentRegistration.ViewModels.TeacherDto

<div class="modal fade" id="ViewModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="ViewModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Teacher Details</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="hidden" name="Tid" id="Tid" value="@Model.Tid" />
                            <label>Teacher Name</label>
                            <label class="form-control">@Model.TeacherName</label>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Cnic #</label>
                            <label class="form-control">@Model.TeacherCnic</label>
                        </div>
                    </div>

                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address Details</label>
                            <label class="form-control">@Model.Address</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email address</label>
                            <label class="form-control">@Model.Email</label>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label>Password</label>
                            <label class="form-control">@Model.Password</label>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Subjects</label>
                            <label class="form-control">@Model.SubjectNames</label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div> 