@model List<StudentRegistration.Models.Class>
@{
    ViewBag.Title = "StudentRecord";
}

<h2>Class</h2>
<button type="submit" value="submit" class="btn btn-success" onclick="location.href='@Url.Action("AddClass","Class")'"><i class="plus-square"> Add  Class</i></button>
<br />
<br />
<table id="tablemodel" class="table table-bordered table-hover table-striped ">

    <thead>

        <tr>
            <th>ClassID</th>
            <th>ClassName</th>
           

            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.List)
        {
            <tr>
                <td>@item.ClassID</td>
                <td>@item.ClassName</td>
               

                <td>
                    <a href="@Url.Action("Delete",new { id=item.ClassID })"><i class="btn btn-success"><b>Delete</b> </i></a>
                    <a href="@Url.Action("EditClass",new { id=item.ClassID})"><i class="btn btn-success">Edit</i></a>
                    <a href="@Url.Action("ProfileView",new { id=item.ClassID})"><i class="btn btn-success user-alt">Profile</i></a>
                </td>
            </tr>
        }
    </tbody>

</table>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
        $('#tablemodel').DataTable({



        });


    </script>

}