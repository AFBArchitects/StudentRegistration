@model List<StudentRegistration.Models.Subject>
@{
    ViewBag.Title = "StudentRecord";
}

<h2>Subject</h2>
<button type="submit" value="submit" class="btn btn-success" onclick="location.href='@Url.Action("AddSubject","Subject")'"><i class="plus-square"> Add  Subject</i></button>
<br />
<br />
<table id="tablemodel" class="table table-bordered table-hover table-striped ">

    <thead>

        <tr>
            <th>SubjectID</th>
            <th>SubjectName</th>


            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.List)
        {
            <tr>
                <td>@item.SubjectID</td>
                <td>@item.SubjectName</td>


                <td>
                    <a href="@Url.Action("Delete",new { id=item.SubjectID })"><i class="btn btn-success"><b>Delete</b> </i></a>
                    <a href="@Url.Action("EditSubject",new { id=item.SubjectID})"><i class="btn btn-success">Edit</i></a>
                    <a href="@Url.Action("ProfileView",new { id=item.SubjectID})"><i class="btn btn-success user-alt">Profile</i></a>
                </td>
            </tr>
        }
    </tbody>

</table>

<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
        $('#tablemodel').DataTable({



        });


    </script>

}